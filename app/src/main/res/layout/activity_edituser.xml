<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edituser">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="336dp"
        android:layout_height="28dp"
        android:fontFamily="serif-monospace"
        android:text="Update user Information"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />

    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="598dp"
        android:layout_marginTop="44dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.229">

        <LinearLayout
            android:layout_width="122dp"
            android:layout_height="388dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tname"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:paddingTop="14dp"
                android:text="Name  :"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/tname2"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:paddingTop="14dp"
                android:text="lastName  :"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/tmobileno"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="8dp"
                android:paddingTop="14dp"
                android:text="mobileNo  :"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/temail"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="8dp"
                android:paddingTop="14dp"
                android:text="email  :"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/taddress"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="8dp"
                android:paddingTop="14dp"
                android:text="address  :"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/tpost"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="4dp"
                android:paddingTop="14dp"
                android:text="PostType  :"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/tdoj"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="4dp"
                android:paddingTop="14dp"
                android:text="join Date"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="376dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="386dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:text="" />

                <EditText
                    android:id="@+id/el"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:text="" />

                <EditText
                    android:id="@+id/emobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:text="" />

                <EditText
                    android:id="@+id/eemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:text="" />

                <EditText
                    android:id="@+id/eaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:text="" />

                <EditText
                    android:id="@+id/epost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:text="" />

                <EditText
                    android:id="@+id/edoj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:text="" />

                <Button
                    android:id="@+id/update_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#4CAF50"
                    android:backgroundTint="#A64CAF50"
                    android:text="Update"
                    android:textColor="#FF5722" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>