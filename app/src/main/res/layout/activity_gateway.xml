<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gateway">

    <TextView
        android:id="@+id/textView"
        android:layout_width="278dp"
        android:layout_height="28dp"
        android:fontFamily="monospace"
        android:text="Welcome to Gateway"
        android:textAlignment="center"
        android:textColor="#33A1CD"

        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="378dp"
        android:layout_height="462dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.846">

        <LinearLayout
            android:layout_width="198dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_userinfo"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="#2A2BB6DF"
                android:fontFamily="monospace"
                android:text="view UserInfo"
                android:textColor="@color/black"
                app:iconTint="#711313"
                app:rippleColor="#A85F5F" />

            <Button
                android:id="@+id/btn_del_user_info"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="#31F44336"
                android:fontFamily="monospace"
                android:text="remove UserData"
                android:textColor="@color/yello"
                app:iconTint="#2196F3" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="357dp"
        android:layout_height="128dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginLeft="15dp"
                android:text="News Feed" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:text="New Feature available" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>